% Table of data from csv
% TODO: currently only works with two data columns, use #1 for column count
\newcommand{\datatable}[4]{
    \begin{table}[H]\centering
        \csvreader[
          tabular=c|c,
          table head=#3\\\hline,
        ]{#4}{}{\csvcoli & \csvcolii}
        \caption{#2}
    \end{table}
}

% Diagram of data from csv
\pgfkeys{
    /datadiagram/.is family, /datadiagram,
    x label/.store in=\xlabel,
    x data/.store in=\xdata,
    x error/.store in=\xerror,
    y label/.store in=\ylabel,
    y data/.store in=\ydata,
    y error/.store in=\yerror,
}
\newcommand{\datadiagram}[2][]{
    \pgfkeys{/datadiagram, #1}
    
    \begin{center}
        \begin{tikzpicture}
            \begin{axis}[
            axis lines = left,
            enlargelimits=0.2,
            ylabel={\ylabel},
            xlabel={\xlabel},
            cycle list name=black white
            ]
            \addplot+[only marks, error bars/.cd, y dir=both, y fixed=\yerror, x dir=both, x fixed=\xerror] table[x=\xdata, y=\ydata, col sep=comma] {#2};
            \end{axis}
        \end{tikzpicture}
    \end{center}
}